@using System
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Team Timothy Kims DVD Library</title>
    <!-- make sure your custom css("Site.css") is below your bootstrap or any framework css file you're using
    because the top file will be overwritten by file below it.-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.5/flatly/bootstrap.min.css" rel="stylesheet" type="text/css"/>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css"/>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <div id="logo" class="hidden-xs hidden-sm">
                <a class="navbar-brand" href="~/Home/Index">
                    <span class="padding-left-5"><img id="logo-image" src="/Content/images/TimothyKimDVDLibraryLogo1.svg" /></span>
                    <span class="padding-top-5">Timothy Kim DVD Library</span>
                </a>
                @*@Html.ActionLink("The Timothy Kim DVD Library", "Index", "Home", new {area = ""}, new {@class = "navbar-brand"})*@
            </div>
            <div id="mobile-logo" class="visible-xs-block visible-sm-block">@Html.ActionLink("Timothy Kim DVD Library", "Index", "Home", new {area = ""}, new {@class = "navbar-brand"})</div>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
                <li>@Html.ActionLink("All Movies", "Index", "Home")</li>
                @*<li>@Html.ActionLink("Check In", "CheckIn", "Borrower")</li>
                    <li>@Html.ActionLink("Check Out", "CheckOut", "Home")</li>*@
                <li>@Html.ActionLink("Add", "Add", "Home")</li>
                <li>@Html.ActionLink("About", "About", "Home")</li>
                @*<li>@Html.ActionLink("Track", "Track", "Borrower")</li>*@
                <li>
                    <form class="navbar-form" role="search">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search by Movie Title..." name="search" id="search" data-list=".list">
                            <div class="input-group-btn">
                                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                            </div>
                        </div>
                    </form>
                </li>
            </ul>
        </div>
    </div>
</div>
<div id="wrap" class="no-container body-content">
    @RenderBody()
</div>

<footer>
    <div class="container">
        <div class="col-lg-offset-1 col-lg-10">
            <div class="row">
                <br/>
                <hr/>
                <div class="col-md-2 col-xs-2 padding-top-20 padding-left-40">
                    <a href="~/Home/Index">
                        <span><img id="footer-logo" src="/Content/images/TimothyKimDVDLibraryLogo1.svg" /></span>
                        <span><h6 class="alt-h6">Timothy Kim DVD Library</h6></span>
                    </a>
                </div>
                <div class="col-md-offset-7 col-md-2 col-xs-offset-4 col-xs-6">

                    <ul class="list-no-style padding-top-20">
                        <li><h6 class="alt-h6">MENU</h6></li>
                        <li><a href="~/Home/Index">All Videos</a></li>
                        <li><a href="~/Home/Add">Add</a></li>
                        <li><a href="~/Home/About">About</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 text-center">
                <br />
                <br />
                <br />
                <p id="credit">&copy; @DateTime.Now.Year - The Timothy Kim DVD Library
                    <span>by Patrick Tighe, Lara Caves, Koshin Abdi, and Timothy Lin</span></p>
                <div class="text-center">
                    <i class="fa fa-facebook"></i>
                    <i class="fa fa-twitter"></i>
                    <i class="fa fa-instagram"></i>
                    <i class="fa fa-tumblr"></i>
                </div>
            </div>
        </div>
    </div>

    
</footer>
<script src="~/Scripts/jquery-2.1.4.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script type="text/javascript" src="~/Scripts/jquery.hideseek.min.js"></script>
<script type="text/javascript" src="~/Scripts/app/search.js"></script>
<script type="text/javascript" src="~/Scripts/app/Contact-Info-Fade-In.js"></script>
</body>
</html>